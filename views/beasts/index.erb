<h1>Beasts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Type</th>
    <th>Status</th>
  </tr>
  <% for beast in @beasts %>
  <tr>
    <td> <a href="/beasts/<%= beast.id %>"><%= beast.name.capitalize %></a> </td>
    <td> <%= beast.type.capitalize %> </td>
    <td> <%= beast.adoption_status.capitalize %> </td>
  </tr>
  <% end %>
</table>
